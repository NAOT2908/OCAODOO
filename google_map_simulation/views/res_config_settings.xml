<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app_settings_block" data-string="google_map_simulation" string="Google Map Simulation"
                         data-key="google_map_simulation">
                        <h2>Google Map Simulation</h2>
                        <div class="row mt16 o_settings_container" name="google_map_simulation">
                            <div class="col-lg-6 col-12 o_setting_box" id="google_map_simulation">
                                <div class="o_setting_right_pane" id="google_map_simulation_settings">
                                    <label for="google_map_api_key"/>
                                    <field name="google_map_api_key"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_google_map_simulation_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'google_map_simulation', 'bin_size': False}</field>
        </record>

    </data>
</odoo>
